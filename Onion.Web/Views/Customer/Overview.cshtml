@model Onion.Web.Models.CustomerListViewModel

<div class="container row p-0 m-0">
    <div class="col-10">
        <h2>Customers</h2>
    </div>
    <div class="col-2">
        <a class="btn btn-info form-control text-white" asp-controller="Customer" asp-action="New">Create new customer</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.AllCustomers.Count > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label>Name</label>
                        </th>
                        <th>
                            <label>Address</label>
                        </th>
                        <th>
                            <label>Phone</label>
                        </th>
                        <th>
                            <label>Email</label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.AllCustomers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.FirstName)
                                @Html.DisplayFor(m => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Street)
                                @Html.DisplayFor(m => item.PostalCode)
                                @Html.DisplayFor(m => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Email)
                            </td>
                            <td>
                                <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-success btn-sm text-white">Edit</a>
                                <button asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@item.CustomerId" onclick="return confirm('Are you sure you want to delete this Customer?')" class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Customers available</p>
            }

        </form>
    </div>
</div>

